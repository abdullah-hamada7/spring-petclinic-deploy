{
  "title": "Spring PetClinic – Overview",
  "uid": "petclinic-overview",
  "tags": ["petclinic", "spring", "mysql", "postgres", "nginx"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "fiscalYearStartMonth": 1,
  "liveNow": false,
  "panels": [
    {
      "type": "stat",
      "title": "Service Up (PetClinic)",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "max(up{job=\"$job\", instance=~\"$instance\"})",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "MySQL Up",
      "id": 101,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "max(up{job=\"mysql\"})", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "red", "value": 0 }, { "color": "green", "value": 1 } ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "PostgreSQL Up",
      "id": 102,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "max(up{job=\"postgres\"})", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "red", "value": 0 }, { "color": "green", "value": 1 } ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Nginx Up",
      "id": 103,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "max(up{job=\"nginx\"})", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "red", "value": 0 }, { "color": "green", "value": 1 } ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Request Rate (req/s)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (method, status) (rate(http_server_requests_seconds_count{job=\"$job\", instance=~\"$instance\", uri!~\".*actuator.*\"}[1m]))",
          "legendFormat": "{{method}} {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 5 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Error Rate (4xx/5xx req/s)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (status) (rate(http_server_requests_seconds_count{job=\"$job\", instance=~\"$instance\", status=~\"4..|5..\", uri!~\".*actuator.*\"}[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 5 }
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 Latency (s)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"$job\", instance=~\"$instance\", uri!~\".*actuator.*\"}[5m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used (%)",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(jvm_memory_used_bytes{job=\"$job\", instance=~\"$instance\", area=\"heap\"}) / sum(jvm_memory_max_bytes{job=\"$job\", instance=~\"$instance\", area=\"heap\"})",
          "legendFormat": "heap used %",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "GC Pause Time Rate (ms/s)",
      "id": 6,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (cause) (rate(jvm_gc_pause_seconds_sum{job=\"$job\", instance=~\"$instance\"}[5m])) * 1000",
          "legendFormat": "{{cause}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms/s" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 19 }
    },
    {
      "type": "timeseries",
      "title": "JVM Threads Live",
      "id": 106,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=\"$job\", instance=~\"$instance\"}",
          "legendFormat": "threads",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 19 }
    },
    {
      "type": "timeseries",
      "title": "MySQL Threads Connected",
      "id": 7,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "mysql_global_status_threads_connected{job=\"mysql\"}",
          "legendFormat": "threads_connected",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 26 }
    },
    {
      "type": "timeseries",
      "title": "PostgreSQL Connections",
      "id": 108,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "pg_stat_activity_count{job=\"postgres\"}",
          "legendFormat": "connections",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 26 }
    },
    {
      "type": "timeseries",
      "title": "PostgreSQL TPS (commit/s)",
      "id": 109,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(pg_stat_xact_commit{job=\"postgres\"}[1m]))",
          "legendFormat": "commit/s",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 33 }
    },
    {
      "type": "timeseries",
      "title": "PostgreSQL Cache Hit Ratio",
      "id": 110,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg( (pg_stat_database_blks_hit{job=\"postgres\"}) / (pg_stat_database_blks_hit{job=\"postgres\"} + pg_stat_database_blks_read{job=\"postgres\"}) )",
          "legendFormat": "hit ratio",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 33 }
    },
    {
      "type": "timeseries",
      "title": "Nginx Requests (req/s)",
      "id": 201,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(nginx_vts_server_requests_total[1m]))",
          "legendFormat": "all",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 40 }
    },
    {
      "type": "timeseries",
      "title": "Nginx 5xx Error Ratio",
      "id": 202,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(nginx_vts_server_requests_total{code=~\"5..\"}[5m])) / sum(rate(nginx_vts_server_requests_total[5m]))",
          "legendFormat": "5xx %",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 40 }
    },
    {
      "type": "timeseries",
      "title": "Container CPU (cores) — optional (cAdvisor)",
      "id": 301,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{name=~\".*(petclinic|nginx|mysql|postgres).*\"}[1m]))",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 47 }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Used (bytes) — optional (cAdvisor)",
      "id": 302,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (name) (container_memory_usage_bytes{name=~\".*(petclinic|nginx|mysql|postgres).*\"})",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 47 }
    },
    {
      "type": "timeseries",
      "title": "Disk Space Used (%) — node_exporter",
      "id": 401,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|aufs|overlay\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|aufs|overlay\"} * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 54 }
    },
    {
      "type": "table",
      "title": "Active Alerts (Prometheus)",
      "id": 501,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "format": "table",
          "refId": "A",
          "legendFormat": ""
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 61 }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "job",
        "label": "Job",
        "datasource": "Prometheus",
        "refresh": 1,
        "hide": 0,
        "query": "label_values(up, job)",
        "current": { "selected": true, "text": "spring-petclinic", "value": "spring-petclinic" }
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": "Prometheus",
        "refresh": 1,
        "hide": 0,
        "query": "label_values(up{job=\"$job\"}, instance)",
        "current": { "selected": true, "text": ".*", "value": ".*" },
        "regex": "",
        "multi": false,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s","10s","30s","1m","5m","15m","30m","1h"] },
  "annotations": {
    "list": [
      {
        "name": "Annotations & Alerts",
        "type": "dashboard",
        "enable": true,
        "hide": false
      }
    ]
  }
}
